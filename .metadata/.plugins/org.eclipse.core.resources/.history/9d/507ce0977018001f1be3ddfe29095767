package de.demoncore.sprites;

import java.awt.Graphics2D;

import de.demoncore.game.GameObject;

public class SpriteObject extends GameObject {

	private Sprite sprite;
	
	public SpriteObject(int posX, int posY, int width, int height, Sprite sprite) {
		super(posX, posY, width, height);
		
		this.sprite = sprite;
	}
	
	@Override
	public void Draw(Graphics2D g2d, int screenWidth, int screenHeight) {
		super.Draw(g2d, screenWidth, screenHeight);
		
		if(sprite == null) System.err.println("awdhuiapwdhuiiawdhuawdhuiwdhuiawdhuihuiawd");
		
		g2d.drawImage(sprite.GetTexture(),
				(int)position.x,
				(int)position.y,
				(int)size.x,
				(int)size.y,
				null);
	}
}
