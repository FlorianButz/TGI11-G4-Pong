package de.demoncore.gui;

import java.awt.Color;
import java.awt.Font;
import java.awt.Graphics2D;
import java.awt.geom.Rectangle2D;
import java.util.ArrayList;
import java.util.List;

public class GUITextArea extends GUIText {

	public int maxLetterInOneLine = 200;
	
	public GUITextArea(int posX, int posY, String text, Font font, Color fontColor) {
		super(posX, posY, text, font, fontColor);
	}

	@Override
	public void Draw(Graphics2D g2d, int screenWidth, int screenHeight) {
		g2d.setFont(font);
		
		size.x = g2d.getFontMetrics().stringWidth(text);
		size.y = g2d.getFontMetrics().getMaxAscent() +
				g2d.getFontMetrics().getMaxDescent() +
				g2d.getFontMetrics().getMaxAdvance() / 2;
		
		super.Draw(g2d, screenWidth, screenHeight);
		
		List<String> splitText = new ArrayList<String>();
		for(int i = 0; i < text.length(); i++) {
			String splitPart = "";
			
			for(int c = 0; c < maxLetterInOneLine; c++) {
				if(text.length() < maxLetterInOneLine * i + c) break;
				System.out.println(maxLetterInOneLine * i + c);
				splitPart += text.charAt(maxLetterInOneLine * i + c);
			}
			
			splitText.add(splitPart);
		}
		
		for(String s : splitText) {
			System.out.println(s);
			System.out.println("---");
		}
		
		Rectangle2D bounds = g2d.getFontMetrics().getStringBounds(text, g2d);
		g2d.drawString(text, GetUIPosition(screenWidth, screenHeight).x, (float) (GetUIPosition(screenWidth, screenHeight).y + bounds.getHeight()));
		
	}
	
}
